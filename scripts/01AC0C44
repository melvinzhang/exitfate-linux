#==============================================================================
# ** Game_Card
#------------------------------------------------------------------------------
#  A blackjack card
#==============================================================================

class Game_Card
  #--------------------------------------------------------------------------
  # * Public Instance Variables
  #--------------------------------------------------------------------------
  attr_reader :suit
  attr_reader :number
  attr_reader :sprite
  #--------------------------------------------------------------------------
  # * Object Initialization
  #--------------------------------------------------------------------------         
  def initialize(suit, number)
    @suit = suit
    @number = number
    @sprite = nil
  end  
  #--------------------------------------------------------------------------
  # * Set sprite
  #--------------------------------------------------------------------------       
  def sprite=(s)
    @sprite = s
  end
  #--------------------------------------------------------------------------
  # * In-game value
  #--------------------------------------------------------------------------       
  def value
    if @number == 1
      return 11
    elsif @number < 10
      return @number
    else
      return 10
    end
  end 
  #--------------------------------------------------------------------------
  # * String of number
  #--------------------------------------------------------------------------       
  def number_string
    if @number == 1
      return "A"
    elsif @number < 10
      return @number.to_s
    elsif @number == 10
      return "J"
    elsif @number == 11
      return "Q"
    elsif @number == 12
      return "K"
    end
  end 
end



